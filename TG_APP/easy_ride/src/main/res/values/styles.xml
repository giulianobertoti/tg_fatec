<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlNormal">@color/jet</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/jet</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/oil</item>
        <item name="android:textColorPrimary">@color/iron</item>

    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
